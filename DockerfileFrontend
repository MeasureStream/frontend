# Stage 1: build React app
FROM node:20-alpine AS builder
WORKDIR /app
COPY package.json ./
COPY package-lock.json ./
RUN npm ci
COPY . .

# Imposta la variabile d'ambiente per Vite (se non gi√† impostata)
ARG VITE_API_URL
#ENV VITE_API_URL=${VITE_API_URL:-http://localhost:8080}
ENV VITE_API_URL=https://donald-herald-beneath-olive.trycloudflare.com


RUN npm run build

# Stage 2: serve with nginx
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html/ui

EXPOSE 80
